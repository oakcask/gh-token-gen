{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prConcurrentLimit": 1,
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true
    }
  ],
  "rangeStrategy": "bump",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^.github\\/workflows\\/.*\\.ya?ml$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>\\S+?) depName=(?<depName>\\S+?)\\s+\\S+:\\s+?\"(?<currentValue>\\S+)\""
      ]
    }
  ]
}
